{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Gestion de projet{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('bootstrap/css/style-admin.css') }}" type="text/css" />
        {% endblock %}
    </head>
    <body>
        
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="{{ path('burgeap_admin_homepage') }}">Accueil</a></li>
                            <li><a href="{{ path('burgeap_admin_all_projects') }}">Tous les projets</a></li>
                            <li><a href="{{ path('burgeap_admin_current_projects') }}">Projets en cours</a></li>
                            <li><a href="{{ path('burgeap_admin_deadlines') }}">Ech√©ances</a></li>
                            <li><a href="{{ path('burgeap_admin_calendar') }}">Calendrier</a></li>
                        </ul>
                    </div><!--/.nav-collapse -->
                    <div class="nav-collapse collapse">
                        <ul class="nav pull-right">
                            <li><a href="#">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container-fluid">
            <div id="content" class="span9">
            {% block body %}
            {% endblock %}
            </div>
        </div>
        
        <!-- Javascript, placed at the end so that the page loads faster -->
        {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.js')}}"></script>
        {% endblock %}
    </body>
</html>